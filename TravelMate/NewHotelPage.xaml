<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
			 xmlns:TapGestureRecognizer="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls"
             x:Class="TravelMate.NewHotelPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#C1ECF5">

	<VerticalStackLayout Padding="20" Spacing="15">
		<StackLayout Grid.Row="0" Orientation="Horizontal" HorizontalOptions="Center" Padding="10">
			<Label Text="Upcoming Bookings" FontSize="30" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,40,0,20"/>
		</StackLayout>

		<StackLayout Grid.Row="0" Orientation="Horizontal" HorizontalOptions="Center" Padding="10" Margin="0,10,0,0">
            <Label Text="Where are you staying next?" FontSize="16" TextColor="#3b6069" VerticalOptions="StartAndExpand" />
		</StackLayout>

		<Frame BackgroundColor="White" Padding="10" HasShadow="True">
			<StackLayout Orientation="Horizontal" Spacing="10">
				<Image Source="Resources/Images/hotel.png" WidthRequest="25" HeightRequest="25" VerticalOptions="Center" />
				<Entry x:Name="HotelNameEntry" Placeholder="Hotel Name" FontSize="16" TextColor="#333333" PlaceholderColor="#888888" />
			</StackLayout>
		</Frame>

		<Frame BackgroundColor="White" Padding="10" HasShadow="True">
			<StackLayout Orientation="Horizontal" Spacing="10">
				<Image Source="Resources/Images/city_icon.png" WidthRequest="25" HeightRequest="25" VerticalOptions="Center" />
				<Entry x:Name="CityEntry" Placeholder="City              " FontSize="16" TextColor="#333333"/>
			</StackLayout>
		</Frame>

		<Frame BackgroundColor="White" Padding="10" HasShadow="True">
			<StackLayout Orientation="Horizontal" Spacing="10">
				<Image Source="calendar_icon.png" WidthRequest="25" HeightRequest="25" VerticalOptions="Center" />
				<DatePicker x:Name="CheckInDatePicker"
                    FontSize="16"
                    TextColor="#333333"/>
			</StackLayout>
		</Frame>

		<Frame BackgroundColor="White" Padding="10" HasShadow="True">
			<StackLayout Orientation="Horizontal" Spacing="10">
				<Image Source="calendar_icon.png" WidthRequest="25" HeightRequest="25" VerticalOptions="Center" />
				<DatePicker x:Name="CheckOutDatePicker" FontSize="16" TextColor="#333333"/>
			</StackLayout>
		</Frame>


		<!-- Add Hotel Button -->
		<Button Text="Search Hotels" Clicked="OnSearchHotelClicked"  BackgroundColor="#7ea3ab"
                TextColor="White" FontAttributes="Bold" CornerRadius="10" HeightRequest="50"/>

		<StackLayout x:Name="HotelResultStack" IsVisible="False" Padding="10" Spacing="15">
			<Image x:Name="HotelImage" HeightRequest="200"/>
			<Label x:Name="HotelNameLabel" FontSize="20" FontAttributes="Bold" TextColor="#333333"/>
			<Label x:Name="HotelAddressLabel" FontSize="16" TextColor="#666666"/>
			<Label x:Name="HotelRatingLabel" FontSize="16" TextColor="#4f818c"/>
			<Label x:Name="HotelPhoneLabel" FontSize="16" TextColor="#333333"/>
		</StackLayout>

	</VerticalStackLayout>
</ContentPage>