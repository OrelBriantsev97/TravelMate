<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:TravelMate.Controls"         
             x:Class="TravelMate.ChecklistPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#C1ECF5">

    <StackLayout Padding="10">

        <!-- ✅ Page Title -->
        <Label x:Name="checklistLabel" Text="Travel Checklist" FontSize="36"  FontFamily="Chi"
               FontAttributes="Bold" TextColor="#32545c" HorizontalOptions="Center" Margin="0,70,0,0"/>

        <ListView x:Name="ChecklistView"
          ItemsSource="{Binding groupedChecklistItems}"
          IsGroupingEnabled="True"
          HasUnevenRows="True"
          BackgroundColor="#C1ECF5"
          SeparatorVisibility="None">

            <!-- ✅ Expandable Category Headers -->
            <ListView.GroupHeaderTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="10">
                            <Label Text="{Binding Key}" FontFamily="PlayWrite" FontSize="20" FontAttributes="Bold" 
                           TextColor="#32545c" />
                            <Image Source="{Binding IsExpanded, Converter={StaticResource ExpandCollapseIconConverter}}"
                           HeightRequest="20" WidthRequest="20">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="ToggleCategoryExpand" CommandParameter="{Binding .}"/>
                                </Image.GestureRecognizers>
                            </Image>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.GroupHeaderTemplate>

            <!-- ✅ Swipe-to-delete Checklist Items -->
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems Mode="Execute">
                                    <SwipeItem Text="Delete" BackgroundColor="Red"
                                       Invoked="OnDeleteItem" CommandParameter="{Binding .}"/>
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Grid Padding="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- ✅ Checkbox -->
                                <CheckBox IsChecked="{Binding IsChecked}" Color="#32545c" 
                                  CheckedChanged="OnItemCheckedChanged" Grid.Column="0"/>

                                <!-- ✅ Checklist Item Text -->
                                <Label Text="{Binding Item}" FontSize="18" Margin="0,8,0,0"
                               TextColor="Black" Grid.Column="1"/>
                            </Grid>
                        </SwipeView>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
        <StackLayout Orientation="Horizontal" Padding="10">
            <Entry x:Name="NewItemEntry" Placeholder="Add new item..." FontSize="18" WidthRequest="250" />
            <Button Text="+" Clicked="OnAddItemClicked" BackgroundColor="#32545c" Margin="10,0,0,0"/>
        </StackLayout>

        <Grid Grid.Row="2">
            <ContentView x:Name="NavigationContainer"/>
        </Grid>
    </StackLayout>
</ContentPage>
