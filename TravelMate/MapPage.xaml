<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mapsui="clr-namespace:Mapsui.UI.Maui;assembly=Mapsui.UI.Maui"
             xmlns:controls="clr-namespace:TravelMate.Controls"
             x:Class="TravelMate.MapPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#C1ECF5">

    <Grid RowDefinitions="Auto, Auto, *, Auto">

        <!-- Map -->
        <Frame HeightRequest="250" Padding="10" CornerRadius="10" BackgroundColor="White">
            <Grid>
                <mapsui:MapControl x:Name="mapView" />

                <!-- Zoom buttons -->
                <StackLayout Orientation="Vertical"
                             VerticalOptions="End"
                             HorizontalOptions="End"
                             Padding="10"
                             BackgroundColor="Transparent"
                             Margin="5">
                    <Button Text="ðŸ” +" Clicked="ZoomIn" Background="Transparent" TextColor="Black" FontSize="20"/>
                    <Button Text="ðŸ” -" Clicked="ZoomOut" Background="Transparent" TextColor="Black" FontSize="20"/>
                </StackLayout>

                <!-- ðŸŒ€ Loading Spinner -->
                <ActivityIndicator IsRunning="True"
                                   IsVisible="{Binding IsLoading}"
                                   Color="#32545c"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   WidthRequest="50"
                                   HeightRequest="50"/>
            </Grid>
        </Frame>

        <!-- Title -->
        <Label Grid.Row="1" Text="Your Trip Overview:"
               FontFamily="Chi" FontSize="22"
               TextColor="#32545c"
               HorizontalOptions="Center"
               FontAttributes="Bold"/>

        <!-- Trip Overview List -->
        <ScrollView Grid.Row="2" Padding="10" BackgroundColor="#C1ECF5">
            <Frame Padding="5" BackgroundColor="#C1ECF5">
                <CollectionView ItemsSource="{Binding TripEvents}" BackgroundColor="#C1ECF5">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackLayout Grid.Row="0" Orientation="Horizontal">
                                    <Label Text="{Binding Icon}" FontSize="22"/>
                                    <Label Text="{Binding Title}" FontSize="20"
                                           FontAttributes="Bold" TextColor="#32545c"
                                           FontFamily="Chi" Margin="5,0,0,0"/>
                                </StackLayout>

                                <Label Grid.Row="1" Text="{Binding Subtitle}"
                                       FontSize="20" TextColor="Black" 
                                       FontFamily="Chi" Margin="25,0,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Frame>
        </ScrollView>

        <!-- Bottom Nav -->
        <Grid Grid.Row="3">
            <ContentView x:Name="NavigationContainer"/>
        </Grid>
    </Grid>
</ContentPage>
