<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelMate.NewFlightPage"
             BackgroundColor="#C1ECF5">

    <Grid Padding="20" RowDefinitions="Auto, *">
        <Label Text="Upcoming Flights"
               FontSize="30"
               FontFamily="sans-serif"
               FontAttributes="Bold"
               TextColor="#32545c"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Margin="0,40,0,20"/>
        
        <!-- Header with Airplane Icon and Title -->
        <StackLayout Grid.Row="0" Orientation="Horizontal" HorizontalOptions="Center" Padding="10" Margin="0,80,0,0">
            <Label Text="What's your next destination?"
                   FontFamily="sans-serif"
                   FontSize="16"
                   TextColor="#3b6069"
                   VerticalOptions="StartAndExpand" />
        </StackLayout>

        <!-- Main Content -->
        <ScrollView Grid.Row="1">
            <StackLayout Spacing="10" VerticalOptions="StartAndExpand">
                <!-- Flight Number -->
                <Frame BackgroundColor="White" Padding="5" HasShadow="True" Margin="0,40,0,0">
                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Image Source="airplain_icon.png" WidthRequest="25" HeightRequest="25" VerticalOptions="Center" />
                        <Entry x:Name="FlightNumberEntry"
                               Placeholder="Enter Flight Number"
                               Keyboard="Text"
                               FontFamily="sans-serif"
                               FontSize="16"
                               TextColor="#333333"
                               PlaceholderColor="#888888" />
                    </StackLayout>
                </Frame>

                <Frame BackgroundColor="White" Padding="5" HasShadow="True">
                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Image Source="origin.png" WidthRequest="25" HeightRequest="25" VerticalOptions="Center" />
                        <Entry x:Name="OriginEntry"
                        Placeholder="Select Origin Airport"
                        FontSize="16"
                        TextColor="#333333"
                        FontFamily="sans-serif"
                        PlaceholderColor="#888888"
                        Focused="OnOriginFocused"
                        TextChanged="OnAirportSearchTextChanged"/>

                        <!-- Help Icon with Tooltip -->
                        <StackLayout Orientation="Horizontal" HorizontalOptions="EndAndExpand" Padding="0,0,0,30">
                            <ImageButton Source="help.png"
                                         HeightRequest="15" WidthRequest="15" MinimumHeightRequest="15" MinimumWidthRequest="15"
                                         Clicked="OnHelpClicked" />
                        </StackLayout>
                    </StackLayout>
                </Frame>


                <ListView x:Name="AirportListOrigin"
                            IsVisible="False"
                            ItemSelected="OnAirportSelected"
                            BackgroundColor="White"
                            SelectionMode="Single">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <Label Text="{Binding CityName}" TextColor="Black" VerticalOptions="Center" />
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Frame BackgroundColor="White" Padding="5" HasShadow="True">
                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Image Source="origin.png" WidthRequest="25" HeightRequest="25" VerticalOptions="Center" />
                        <Entry x:Name="DestinationEntry"
                            Placeholder="Select Destination Airport"
                            FontSize="16"
                            FontFamily="sans-serif"
                            TextColor="#333333"
                            PlaceholderColor="#888888"
                            Focused="OnDestinationFocused"
                        TextChanged="OnAirportSearchTextChanged"/>

                        <StackLayout Orientation="Horizontal" HorizontalOptions="EndAndExpand" Padding="0,0,0,30">
                            <ImageButton Source="help.png"
                                         HeightRequest="15" WidthRequest="15" MinimumHeightRequest="15" MinimumWidthRequest="15"
                                         Clicked="OnHelpClicked" />
                        </StackLayout>
                    </StackLayout>
                </Frame>

                <ListView x:Name="AirportListDest"
                          IsVisible="False" 
                          ItemSelected="OnAirportSelected"
                          BackgroundColor="White"
                          SelectionMode="Single">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <Label Text="{Binding CityName}" TextColor="Black" VerticalOptions="Center" />
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Departure Date -->
                <Frame BackgroundColor="White" Padding="5" HasShadow="True">
                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Image Source="calendar_icon.png" WidthRequest="25" HeightRequest="25" VerticalOptions="Center" />
                        <DatePicker x:Name="DepartureDatePicker"
                                    FontSize="16"
                                    TextColor="#333333"
                                    FontFamily="sans-serif"
                                   
                                    />
                    </StackLayout>
                </Frame>

                <!-- Search Flight Button -->
                <Button Text="Search Flight"
                        Clicked="OnSearchFlightClicked"
                        BackgroundColor="#7ea3ab"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontFamily="sans-serif"
                        CornerRadius="10"
                        HeightRequest="50" />

                <!-- Flight Details Section -->
                <Frame Padding="15"
                       BackgroundColor="#F5F5F5"
                       HasShadow="True"
                       CornerRadius="10"
                       IsVisible="False"
                       x:Name="FlightDetailsLayout">
                    <StackLayout Spacing="10">
                        <!-- Flight Info -->
                        <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto" VerticalOptions="CenterAndExpand">
                            <Label x:Name="AirlineLabel"
                                Grid.Row="0" Grid.ColumnSpan="3"
                                Margin="0,-5,0,0"
                                FontSize="16"
                                FontAttributes="Bold"
                                TextColor="#7ea3ab"
                                HorizontalOptions="Center"
                                Text="Airline Name"
                                FontFamily="sans-serif"
                                IsVisible="True"/>
                            
                            <Label Grid.Row="0" Grid.Column="0"
                                   FontSize="16"
                                   TextColor="Black"
                                   FontAttributes="None"
                                   HorizontalOptions="Start"
                                   FontFamily="sans-serif"
                                   Text="Boarding Time:" 
                                   x:Name="DepartureTimeLabel" />

                            <Label Grid.Row="0" Grid.Column="2"
                                   FontSize="16"
                                   TextColor="Black"
                                   FontAttributes="None"
                                   HorizontalOptions="End"
                                   FontFamily="sans-serif"
                                   Text="Arrival Time:" 
                                   x:Name="ArrivalTimeLabel" />

                            <!-- Origin IATA -->
                            <Label x:Name ="OriginLabel"
                                   Grid.Row="1" Grid.Column="0"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="#7ea3ab"
                                   HorizontalOptions="Start"
                                   FontFamily="sans-serif"
                                   Text="Origin" />

                            <Label x:Name ="DepartureDateLabel"
                                Grid.Row="1" Grid.Column="0"
                                FontSize="10"
                                FontAttributes="Bold"
                                TextColor="#7ea3ab"
                                HorizontalOptions="Start"
                                IsVisible="False"
                                 />


                            <!-- Line Between -->
                            <BoxView Grid.Row="1" Grid.Column="1"
                             HeightRequest="2"
                             BackgroundColor="#7ea3ab"
                             VerticalOptions="Center" />

                            <!-- Destination IATA -->
                            <Label x:Name="DestinationLabel"
                                   Grid.Row="1" Grid.Column="2"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="#7ea3ab"
                                   FontFamily="sans-serif"
                                   HorizontalOptions="End"
                                   Text="Destination" />

                            <Label x:Name ="ArrivalDateLabel"
                                   Grid.Row="2" Grid.Column="2"
                                   FontSize="10"
                                   FontAttributes="Bold"
                                   TextColor="#7ea3ab"
                                   HorizontalOptions="Start"
                                   IsVisible="False"
                                   />

                            <!-- Flight Duration -->
                            <Label x:Name="DurationLabel"
                                   Grid.Row="4" Grid.Column="1"
                                   FontSize="16"
                                   TextColor="#606060"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   Margin="0,30,0,0"
                                   FontFamily="sans-serif"
                                   Text="Duration:" />

                        </Grid>
                    </StackLayout>


                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnFlightTapped" />
                    </Frame.GestureRecognizers>

                </Frame>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
