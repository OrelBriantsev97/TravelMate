<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TravelMate.Controls"
             x:Class="TravelMate.CurrencyConverterPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#C1ECF5">

    <Grid RowDefinitions="*, Auto">
        <VerticalStackLayout Grid.Row="0" Padding="20" Spacing="15" Margin="0,70,0,0">
            <Label Text="Currency Converter"
                   FontSize="30"
                   FontFamily ="sans-serif" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#32545c"/>

           
            <Label Text="Insert amound and select currencies" FontSize="20" FontAttributes="Bold" TextColor="#3b6069"
               HorizontalOptions="Center"  FontFamily="Chi"/>


            <Frame Padding="10" BackgroundColor="White" CornerRadius="10" HasShadow="True" Margin="0,10,0,0">
                <Entry x:Name="AmountEntry"
                       Placeholder="Enter amount"
                       FontFamily ="sans-serif"
                       Keyboard="Numeric"
                       FontSize="18"
                       TextChanged="OnAmountChanged"/>
            </Frame>

            <Frame Padding="10" BackgroundColor="White" CornerRadius="10" HasShadow="True">
                <Picker x:Name="FromCurrencyPicker" FontFamily="sans-serif"
            Title="From Currency"
            FontSize="18"
            SelectedIndexChanged="OnCurrencyChanged"/>
            </Frame>

            <Frame Padding="10" BackgroundColor="White" CornerRadius="10" HasShadow="True">
                <Picker x:Name="ToCurrencyPicker" FontFamily="sans-serif"
            Title="To Currency"
            FontSize="18"
            SelectedIndexChanged="OnCurrencyChanged"/>
            </Frame>


            <Label x:Name="ConvertedAmountLabel"
                   Text="Converted Amount"
                   FontSize="22"
                   FontFamily="sans-serif"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#32545c"/>

            <Button Text="Refresh Rates"
                    FontSize="16"
                    BackgroundColor="#32545c"
                    FontFamily ="PlayWrite"
                    TextColor="White"
                    Clicked="OnRefreshRatesClicked"
                    CornerRadius="10"
                    Padding="10"/>

        </VerticalStackLayout>

        <Grid Grid.Row="2">
            <ContentView x:Name="NavigationContainer"/>
        </Grid>
    </Grid>
</ContentPage>